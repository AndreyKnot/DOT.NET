@model Lab8.Models.Student
@{
    ViewBag.Title = "Edit student";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SurName" class="control-label">Surname</label>
        <input type="text" asp-for="SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Group" class="control-label">Group</label>
        <input type="text" asp-for="Group" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AcademicPerformance" class="control-label">Academic Performance</label>
        <input type="text" asp-for="AcademicPerformance" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-outline-success" />
    </div>
</form>