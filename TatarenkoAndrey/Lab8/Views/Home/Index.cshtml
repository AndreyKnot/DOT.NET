@model IEnumerable<Lab8.Models.Student>

    @{
        ViewBag.Title = "All Students";
    }

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>Id</td>
                <td>FirstName</td>
                <td>SurName</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.SurName</td>
                    <td>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-outline-dark">Add student</a>

    @if (TempData["notice"] != null)
    {
        <div style="color: #DC3545;">@TempData["notice"]</div>
    }
